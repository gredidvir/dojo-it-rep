<h1><%= markdown @post.title %></h1>


<div class="row">
  <div class="col-md-8">
    <!-- <p><%= @post.body %></p> -->
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by
      <%= @post.user.name %>
    </small>

    <p><%= markdown @post.body %><%= image_tag(@post.post_image.profile.url) if @post.post_image? %> </p>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>    
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
  </div>
  <br/ >
    <% @comments.each do |comment| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= render :partial => 'comments/comment', locals: { topic: @topic, post: @post, comment: comment } %>
          </h4>
        </div>
      </div>
    <% end %>
    <% if current_user %>
  <%= render :partial => 'comments/form', locals: { topic: @topic, post: @post, comment: @post.comments.new } %>
  <%end%>
</div>